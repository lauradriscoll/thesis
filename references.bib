month = {apr},
number = {17},
pages = {5671--5680},
title = {{Distinct encoding of spatial and nonspatial visual information in parietal cortex.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/19403833 http://www.jneurosci.org/cgi/doi/10.1523/JNEUROSCI.2878-08.2009},
